<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Yapılacaklar"
             Title="Yapılacaklar">
    <StackLayout Margin="20">
        <ScrollView>
            <StackLayout x:Name="todoStackLayout" />
        </ScrollView>
        <StackLayout Orientation="Horizontal" HorizontalOptions="End">
            <ImageButton Source="plus.png" Aspect="AspectFit" Clicked="AddTodo_Clicked" WidthRequest="40"  HeightRequest="1" Margin="3"/>

            <ImageButton Background="White"  Source="save.png"  Aspect="AspectFit" Clicked="SaveTodo_Clicked" WidthRequest="10"  HeightRequest="1" />
        </StackLayout>
    </StackLayout>

</ContentPage>